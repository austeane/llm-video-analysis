{
  "$schema": "https://schema.railpack.com",
  "provider": "node",
  "deploy": {
    "inputs": [
      {
        "step": "packages:mise",
        "include": [
          "/mise/shims",
          "/mise/installs",
          "/usr/local/bin/mise",
          "/etc/mise/config.toml",
          "/root/.local/state/mise"
        ]
      },
      {
        "step": "build",
        "include": [
          "dist",
          "server.ts",
          "package.json",
          "bun.lock",
          "node_modules",
          "public",
          "certs"
        ],
        "exclude": [
          "node_modules/.cache"
        ]
      }
    ]
  }
}
